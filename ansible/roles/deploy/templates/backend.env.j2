# AfriMart Backend - Generated by Ansible
NODE_ENV={{ node_env | default('production') }}
PORT={{ backend_port | default(5000) }}

# Database (RDS)
DATABASE_URL=postgresql://{{ db_user }}:{{ db_password }}@{{ db_host }}:{{ db_port }}/{{ db_name }}
DB_HOST={{ db_host }}
DB_PORT={{ db_port }}
DB_NAME={{ db_name }}
DB_USER={{ db_user }}
DB_PASSWORD={{ db_password }}

# Redis (ElastiCache)
REDIS_URL={{ redis_url }}
REDIS_HOST={{ redis_host }}
REDIS_PORT={{ redis_port }}

# JWT (set jwt_secret in group_vars/dev.yml)
JWT_SECRET={{ jwt_secret | default('CHANGE_ME_GENERATE_STRONG_SECRET') }}
JWT_EXPIRE=7d

# AWS S3 (EC2 IAM role provides credentials)
AWS_REGION={{ aws_region }}
AWS_S3_BUCKET={{ s3_bucket }}
USE_S3=true

# Application URLs
FRONTEND_URL=http://{{ ansible_host }}/ 
BACKEND_URL=http://{{ ansible_host }}/api

# Logging
LOG_LEVEL=info
