# Copy to secret.yaml and fill in values. Never commit secret.yaml!
# kubectl create secret generic afrimart-secrets --from-literal=... -n afrimart --dry-run=client -o yaml > secret.yaml
apiVersion: v1
kind: Secret
metadata:
  name: afrimart-secrets
  namespace: afrimart
type: Opaque
stringData:
  DATABASE_URL: "postgresql://afrimatadmin:YOUR_DB_PASSWORD@YOUR_RDS_ENDPOINT:5432/afrimart"
  REDIS_URL: "redis://YOUR_REDIS_ENDPOINT:6379"
  JWT_SECRET: "your-super-secret-jwt-key-change-in-production"
  FRONTEND_URL: "https://your-domain.com"
  SMTP_HOST: "smtp.gmail.com"
  SMTP_PORT: "587"
  SMTP_USER: ""
  SMTP_PASS: ""
  EMAIL_FROM: "noreply@afrimart.com"
  AWS_ACCESS_KEY_ID: ""
  AWS_SECRET_ACCESS_KEY: ""
  AWS_REGION: "eu-north-1"
  AWS_S3_BUCKET: ""
